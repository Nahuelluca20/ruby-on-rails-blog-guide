<h1 class="text-white">Articles</h1>
<ul>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li>
        <%= link_to article.title, article, class: "text-white" %>
      </li>
    <% end %>
  <% end %>
</ul>
<%= link_to "New Article", new_article_path, class: "h-[3rem] py-2 px-2 rounded-md font-bold text-[#2B306A] bg-[#646EE4] no-underline" %>